{
    "name": "yii-tools/flowbite-asset",
    "type": "library",
    "description": "Asset for components on top of Tailwind CSS",
    "keywords": [
        "yii-tools",
        "flowbyte",
        "asset",
        "tailwind"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "foxy/foxy": "^1.2",
        "yii-tools/tailwind-asset": "^1.0@dev",
        "yiisoft/assets": "^4.0",
        "yiisoft/files": "^2.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^10.0",
        "roave/infection-static-analysis-plugin": "^1.28",
        "vimeo/psalm": "^5.8",
        "yii-tools/support": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Flowbite\\Asset\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Flowbite\\Asset\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "foxy/foxy": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
